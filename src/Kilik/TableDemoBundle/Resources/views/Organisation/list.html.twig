{% extends '@KilikTableDemo/layout.html.twig' %}

{% block body %}
    <section class="container">
        <div class="row">
            <div class="sm-12">
                {% embed "@KilikTable/_defaultTable.html.twig" with {"table": table} %}
                    {% block tableTitle %}
                        <b>Organisations list</b>
                        <div class="navbar navbar-right">
                            <a href="{{ path("tabledemo_index") }}"><span class="glyphicon glyphicon-home"></span> return to examples list</a>
                        </div>
                    {% endblock tableTitle %}
                {% endembed %}
            </div>
        </div>
    </section>

{% endblock body %}

{% block javascript %}
    <script type="text/javascript">
        $(document).ready(function () {
            var table = new KilikTable("{{ table.id }}", "{{ table.path }}", JSON.parse('{{ table.options | json_encode | raw }}'));
            table.init();
        });
    </script>

{% endblock javascript %}
